
package travelers;
rule "BondDetailValidations"
	dialect "mvel"
no-loop true
	agenda-group "bonddetailvalidations"
when
travelers.Bond( )
travelers.NewBondEligible( reason=="Passed Premium Validation")

then
System.out.println("Passed BondDetailvalidations");
modify travelers.NewBondEligible(){
  setEligible(true);
   setReason("BondDetailValidationPassed");
}
end

